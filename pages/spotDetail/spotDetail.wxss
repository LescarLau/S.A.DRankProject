/* pages/spotDetail/spotDetail.wxss */
.container {
  padding: 30rpx;
  padding-bottom: 150rpx;
}

.spot-header {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.spot-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.spot-address {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.spot-stats {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #07c160;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.spot-description {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.description-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.boss-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.boss-info {
  display: flex;
  align-items: center;
}

.boss-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.boss-detail {
  flex: 1;
}

.boss-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.boss-count {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

.ranking-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.ranking-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.rank-item:last-child {
  border-bottom: none;
}

.rank-number {
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.user-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-name {
  font-size: 28rpx;
  color: #333;
}

.check-in-count {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.check-in-btn {
  background-color: #07c160;
  color: #fff;
}

.check-in-btn.checked {
  background-color: #ddd;
  color: #666;
}

.nav-btn {
  background-color: #f8f8f8;
  color: #333;
}